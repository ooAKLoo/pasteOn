{
  "build": {
    "devPath": "http://localhost:5173",
    "distDir": "../../src-front/dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "pasteOn",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true,
        "setIgnoreCursorEvents": true,
        "setSize": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": [
          "$APPDATA",
          "$APPDATA/",
          "$APPDATA/*",
          "$APPDATA/**"
        ],
        "exists": true
      }
    },
    "windows": [
      {
        "title": "pasteOn",
        "width": 400,
        "height": 100,
        "decorations": false,
        "resizable": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "focus": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "dangerousUseHttpScheme": true
    },
    "systemTray": {
      "iconPath": "icons/macTray.png",
      "iconAsTemplate": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dongju.pasteOn",
      "copyright": "dongju",
      "icon": [
        "icons/macAppIcon.icns",
        "icons/macAppIcon.png",
        "icons/icon.ico"
      ]
    }
  }
}